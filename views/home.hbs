  <script>

    $('button[name=stripe-pay]').on('click', function(e) {
      // Clear error messages
      $('span.email-error').text('');
      $('span.lickey-error').text('');
      // Email and lickey values
      var email = $('input[name=stripe-email]').val();
      var lickey = $('input[name=stripe-lickey]').val();
      // Check email and lickey
      var reEmail = new RegExp("[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?");
      var reLicKey = new RegExp("^([A-Z0-9]{5}-){3}[A-Z0-9]{5}$");
      var isValidEmail = reEmail.test(email);
      var isValidLicKey = reLicKey.test(lickey);
      if (!isValidEmail) {
        $('span.email-error').text('Invalid Email Address');
      }

      if (!isValidLicKey) {
        $('span.lickey-error').text('Invalid License Key');
      }

      if (!(isValidEmail && isValidLicKey)) {
        return;
      };


      StripeCheckout.open({
        key: '{{stripe_pk}}',
        image: '/img/logo.jpg',
        amount: {{axmath_price}},
        name: 'AxMath Pro',
        description: 'AxMath Pro License',
        panelLabel: 'Pay Now',
        email: email,
        token: function(token) {
          var tokenid = token.id;
          $.ajax({
            type: "POST",
            url: "/lic/pay",
            dataType: "json",
            data: {tokenid, email, lickey},
            success: function() {
              console.log('create and pass token success');
            }
          });
        }
      });

      e.preventDefault();
    });

    $(window).on('popstate', function() {
      handler.close();
    });
      
  </script>

